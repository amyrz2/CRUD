@{
    ViewData["Title"] = "Add Movie";
}

@model Movies.Models.ApplicationResponse

<h1>If you would like to add a movie, fill out the form below!</h1>

<div>

    <form method="post">

        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />

        <label asp-for="Year">Year:</label>
        <input min="1880" max="3000" asp-for="Year"/>
        <br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option disabled selected> -- select an option -- </option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo" maxlength="20" />
        <br />

        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes" maxlength="25"></textarea>
        <br />

        <button type="submit">Submit Application</button>
        <br /><br /><br />

        <!--output any errors-->
        <div asp-validation-summary="All"></div>

    </form>

</div>